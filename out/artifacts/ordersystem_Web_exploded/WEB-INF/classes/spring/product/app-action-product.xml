<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"  
    xsi:schemaLocation="  
	http://www.springframework.org/schema/beans   
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
	http://www.springframework.org/schema/context   
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"> 
	
	<!-- 产品 -->
	<bean id="xProductsAction" class="com.kssj.product.action.XProductsAction" scope="prototype"></bean>
	<!-- 产品类别 -->
	<bean id="xProCategoryAction" class="com.kssj.product.action.XProCategoryAction" scope="prototype"></bean>
	<!-- 收货人 -->
	<bean id="xReceiversAction" class="com.kssj.product.action.XReceiverInfoAction" scope="prototype"></bean>
	<!-- 产品后台管理 -->
	<bean id="xProductsManageAction" class="com.kssj.product.action.XProductsManageAction" scope="prototype"></bean>
</beans>